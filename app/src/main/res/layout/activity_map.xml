<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/map"
    android:layout_height="match_parent"

    tools:context=".MapActivity">



    <TextView
        android:id="@+id/scanResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:text="PENCARIAN ALAMAT"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lokasi"
        android:layout_width="270dp"
        android:padding="10dp"
        android:layout_height="43dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text"
        android:hint="Masukan Lokasi Anda"
        />

    <EditText
        android:id="@+id/tujuan"
        android:layout_width="270dp"
        android:padding="10dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/edit_text"
        android:layout_marginLeft="47dp"
        android:hint="Masukan Tujuan Anda" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="200dp"
    android:backgroundTint="@color/BlueNew"
        android:text="Submit" />

    <Button
        android:id="@+id/btnKembaliMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:backgroundTint="@color/red"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="105dp"

        android:text="Kembali Ke Menu" />


</RelativeLayout>
