<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".BerandaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/btnDaftarPoli"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="385dp"
            android:backgroundTint="@color/BlueNew"
            android:text="Daftar Poli" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/BlueNew"
            android:text="Scan QR" />
        <TextView
            android:id="@+id/scanResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="43dp"
            android:text="Jl. Raya timur III Dawuan Kab. Majalengka"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btnMap"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/BlueNew"
            android:text="Cari Lokasi" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/red"
            android:text="Logout" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>